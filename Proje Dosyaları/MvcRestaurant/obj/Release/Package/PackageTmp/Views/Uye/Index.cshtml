@using MvcRestaurant.Models.Entity
@using PagedList;
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Üyeler</h2>
<table class="table table-bordered">
    <tr>
        <th>PERSONEL ID</th>
        <th>PERSONEL ADI</th>
        <th>PERSONEL SOYAD</th>
        <th>MAIL</th>
        <th>Kullanici-Adi</th>
        <th>Sifre</th>
        <th>Tel</th>
        <th>Yetki</th>
        <th>Fotograf</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var Uye in Model)
    {
<tr>
    <th>@Uye.ID</th>
    <th>@Uye.AD</th>
    <th>@Uye.SOYAD</th>
    <th>@Uye.MAIL</th>
    <th>@Uye.KULLANICIADI</th>
    <th>@Uye.SIFRE</th>
    <th>@Uye.TEL</th>
    <th>@Uye.YETKİ</th>
    <th>@Uye.Fotograf</th>
    <th><a href="/Uye/UyeSil/@Uye.ID" class="btn btn-danger">Sil</a></th>
    <th><a href="/Uye/UyeGetir/@Uye.ID" class="btn btn-success">Güncelle</a></th>
</tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}))
<a href="/Uye/UyeEkle/" class="btn btn-primary">Yeni Üye Ekle</a>

