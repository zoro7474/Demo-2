@model MvcRestaurant.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Müşteri Profil Bilgileri</h2>
@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bolder">Mail Adresi: </label> @HttpContext.Current.User.Identity.Name
            </td>
        <tr>
            <td>
                <label style="font-weight:bolder">Ad</label> @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
</td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Soyad</label>  @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Kullanici Adi</label> @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Sifre</label>  @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Telefon</label> @Html.TextBoxFor(x => x.TEL, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Bilgileri Güncelle</button>
            </td>
        </tr>


    </table>}

