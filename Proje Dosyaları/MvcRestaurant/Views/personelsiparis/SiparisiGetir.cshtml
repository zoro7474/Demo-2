@model MvcRestaurant.Models.Entity.TBLRezervasyon
@{
    ViewBag.Title = "SiparisiGetir";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("SiparisiGuncelle", "personelsiparis", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <label>Garson Durumu</label>
        @Html.TextBoxFor(k => k.garsondurum, new { @class = "form-control" })
        <label>Ücret</label>
        @Html.TextBoxFor(k => k.kar, new { @class = "form-control" })
        <br />
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

